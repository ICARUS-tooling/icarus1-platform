<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		PAINTE EDITOR VIEW
	-->
		
	<!-- Open Preferences -->
	<action id="plugins.prosody.painteEditorView.openPreferencesAction"
		template="actions.default.openPreferencesAction" />
		
	<!-- Add PaIntE Params -->
	<action id="plugins.prosody.painteEditorView.addPainteParamsAction"
		name="${id}.name" desc="${id}.description" icon="chart_curve_add.png" />
		
	<!-- Remove PaIntE Params -->
	<action id="plugins.prosody.painteEditorView.removePainteParamsAction"
		name="${id}.name" desc="${id}.description" icon="chart_curve_delete.png" />
		
	<!-- Edit PaIntE Params -->
	<action id="plugins.prosody.painteEditorView.usePainteParamsAction"
		name="${id}.name" desc="${id}.description" icon="chart_curve_edit.png" />
		
	<!-- Rename PaIntE Params -->
	<action id="plugins.prosody.painteEditorView.renamePainteParamsAction"
		template="actions.default.renameAction"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Export Params History -->
	<action id="plugins.prosody.painteEditorView.exportParamsHistoryAction"
		template="actions.default.exportAction"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Import Params History -->
	<action id="plugins.prosody.painteEditorView.importParamsHistoryAction"
		template="actions.default.importAction"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Clear Params History -->
	<action id="plugins.prosody.painteEditorView.clearParamsHistoryAction"
		template="actions.default.clearAction"
		name="${id}.name" desc="${id}.description" />
		
	<!-- ToolBar List for header area -->
	<action-list id="plugins.prosody.painteEditorView.toolBarList">
		<item type="action" value="plugins.prosody.painteEditorView.openPreferencesAction" />
		<separator />
		<item type="action" value="plugins.prosody.painteEditorView.addPainteParamsAction" />
		<item type="action" value="plugins.prosody.painteEditorView.removePainteParamsAction" />
		<item type="action" value="plugins.prosody.painteEditorView.usePainteParamsAction" />
		<item type="action" value="plugins.prosody.painteEditorView.renamePainteParamsAction" />
		<separator />
		<item type="action" value="plugins.prosody.painteEditorView.clearParamsHistoryAction" />
		<item type="action" value="plugins.prosody.painteEditorView.importParamsHistoryAction" />
		<item type="action" value="plugins.prosody.painteEditorView.exportParamsHistoryAction" />
		<separator />
		<item type="glue" />
	</action-list>
		
	<!-- Popup-Menu list -->
	<action-list id="plugins.prosody.painteEditorView.popupMenuList">
		<item type="action" value="plugins.prosody.painteEditorView.refreshAction" />
		<separator />
		<item type="action" value="plugins.prosody.painteEditorView.removePainteParamsAction" />
		<item type="action" value="plugins.prosody.painteEditorView.usePainteParamsAction" />
		<item type="action" value="plugins.prosody.painteEditorView.renamePainteParamsAction" />
		<separator />
		<item type="action" value="plugins.prosody.painteEditorView.clearParamsHistoryAction" />
		<item type="action" value="plugins.prosody.painteEditorView.importParamsHistoryAction" />
		<item type="action" value="plugins.prosody.painteEditorView.exportParamsHistoryAction" />
	</action-list>
	
</actions>