<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		PROSODY SENTENCE DETAIL PRESENTER
	-->
		
	<!-- Open Preferences -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.openPreferencesAction"
		template="actions.default.openPreferencesAction" />
		
	<!-- Refresh -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.refreshAction"
		template="actions.default.refreshAction" />
		
	<!-- Edit Label Patterns -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.editLabelPatternsAction"
		name="${id}.name" desc="${id}.description" icon="url.gif" />
		
	<!-- Toggle 'showConstraints' -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.toggleShowConstraintsAction"
		name="${id}.name" desc="${id}.description" icon="chart_curve2.png" type="toggle" />
		
	<!-- Toggle 'paintCompact' -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.togglePaintCompactAction"
		name="${id}.name" desc="${id}.description" icon="debug_view_compact.gif" type="toggle" />
		
	<!-- Play Sentence -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.playSentenceAction"
		template="actions.default.startAction"
	 	name="${id}.name" desc="${id}.description" />
		
	<!-- Stop Playback -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.stopPlaybackAction"
		template="actions.default.stopAction" />
		
	<!-- Pause Playback -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.pausePlaybackAction"
		template="actions.default.pauseAction" type="toggle" />
		
	<!-- Copy Painte Word -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.copyPainteWordAction"
		template="actions.default.copyAction"
	 	name="${id}.name" desc="${id}.description" />
		
	<!-- Copy Painte Syllable -->
	<action id="plugins.prosody.prosodySentenceDetailPresenter.copyPainteSyllableAction"
		template="actions.default.copyAction"
	 	name="plugins.prosody.copyPainteParamsAction.name" 
		desc="plugins.prosody.copyPainteParamsAction.description" />
		
	<!-- ToolBar List for header area -->
	<action-list id="plugins.prosody.prosodySentenceDetailPresenter.toolBarList">
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.openPreferencesAction" />
		<separator />
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.refreshAction" />
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.editLabelPatternsAction" />
		<separator />
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.playSentenceAction" />
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.stopPlaybackAction" />
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.pausePlaybackAction" />
		<separator />
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.toggleShowConstraintsAction" />
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.togglePaintCompactAction" />
		<separator />
		<item type="glue" />
	</action-list>
		
	<!-- Popup-Menu list -->
	<action-list id="plugins.prosody.prosodySentenceDetailPresenter.popupMenuList">
		<!--<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.copyPainteWordAction" />-->
		<item type="action" value="plugins.prosody.prosodySentenceDetailPresenter.copyPainteSyllableAction" />
	</action-list>
	
</actions>