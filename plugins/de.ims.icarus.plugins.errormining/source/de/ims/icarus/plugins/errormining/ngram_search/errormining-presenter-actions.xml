<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		ERRORMINING PRESENTER
	-->
	

	<!-- Filter Results -->
	<action id="plugins.errormining.nGramResultView.applyFilterAction"
		name="${id}.name" desc="${id}.description" icon="filter_tsk.gif" />

	<!-- Reset -->
	<action id="plugins.errorMining.nGramResultView.resetFilterAction"
		name="${id}.name" desc="${id}.description" icon="nav_refresh.gif" />
	
	<!-- Sort Results ASC -->
	<action id="plugins.errormining.nGramResultView.sortAscAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_asc_alph.gif" />
	
	<!-- SORT Results DESC -->
	<action id="plugins.errormining.nGramResultView.sortDescAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_desc_alph.gif"/>
	
	<!-- Open Preferences -->
	<action id="plugins.errormining.nGramResultView.openPreferencesAction"
		template="actions.default.openPreferencesAction" />
	
	<!-- Stats Generation -->
	<action id="plugins.errormining.nGramResultView.statsAction"
		name="${id}.name" desc="${id}.description" icon="uddi_registry_cat_node.gif"/>
	
	<!-- Show Details -->
	<action id="plugins.errormining.nGramResultView.showDetailAction"
		name="${id}.name" desc="${id}.description" icon="filter_errormining.png"/>
	
	<!-- Export barchart -->
	<action id="plugins.errormining.nGramResultView.exportBarchart"
		name="${id}.name" desc="${id}.description" icon="export_wiz.gif"/>
	


	<!-- ToolBar List for overview area -->
	<action-list id="plugins.errormining.nGramResultView.toolBarList">
		<item type="action" value="plugins.errormining.nGramResultView.openPreferencesAction" />
		<separator />		
		<item type="label" value="plugins.errormining.nGramResultView.filteredResults.label" />
		<item type="custom" value="resultCounter" />		
		<separator />
		<item type="action" value="plugins.errorMining.nGramResultView.resetFilterAction" />
		<separator />		
		<item type="label" value="plugins.errormining.nGramResultView.textFilter.label" />		
		<item type="custom" value="textfield" />
		<item type="label" value="plugins.errormining.nGramResultView.lowerBound.label" />
		<item type="custom" value="lowerBound" />
		<item type="label" value="plugins.errormining.nGramResultView.upperBound.label" />
		<item type="custom" value="upperBound" />
		<item type="action" value="plugins.errormining.nGramResultView.applyFilterAction" />
		<separator />
		<item type="action" value="plugins.errormining.nGramResultView.sortAscAction" />
		<item type="action" value="plugins.errormining.nGramResultView.sortDescAction" />
		<separator />
		<item type="glue"/>
	</action-list>	

	<!-- ToolBar List for statistic -->
	<action-list id="plugins.errormining.nGramResultView.toolBarStatistic">
		<item type="action" value="plugins.errormining.nGramResultView.openPreferencesAction" />
		<separator />		
		<item type="label" value="plugins.errormining.nGramResultView.filteredResults.label" />
		<item type="custom" value="statisticCounter" />		
		<separator />
		<item type="action" value="plugins.errorMining.nGramResultView.resetFilterAction" />
		<separator />		
		<item type="label" value="plugins.errormining.nGramResultView.textFilter.label" />		
		<item type="custom" value="statisticTextFilterField" />
		<item type="action" value="plugins.errormining.nGramResultView.applyFilterAction" />
		<separator />
		<item type="action" value="plugins.errormining.nGramResultView.showDetailAction" />
		<separator />
		<item type="label" value="plugins.errormining.nGramResultView.statsSpinner.label" />
		<item type="custom" value="statsSpinner" />
		<item type="action" value="plugins.errormining.nGramResultView.statsAction" />
		<separator />
		<item type="action" value="plugins.errormining.nGramResultView.exportBarchart" />
		<separator />
		<item type="glue"/>
	</action-list>	
</actions>