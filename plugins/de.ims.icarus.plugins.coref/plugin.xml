	<runtime>
		<library id="source" path="." type="code">
			<export prefix="*" />
		</library>
		<library id="args4j" path="lib/args4j-20120919.jar" type="code">
			<export prefix="*" />
		</library>
		<library id="ims-hotcoref" path="lib/ims-hotcoref-src.jar" type="code">
