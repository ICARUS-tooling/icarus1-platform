<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		ENTITY GRID PRESENTER
	-->
		
	<!-- Refresh -->
	<action id="plugins.coref.entityGridPresenter.refreshAction"
		template="actions.default.refreshAction" />
	
	<!-- Toggle 'markFalseSpans' -->
	<action id="plugins.coref.entityGridPresenter.toggleMarkFalseMentionsAction"
		name="${id}.name" desc="${id}.description" icon="false_node.png" type="toggle" />
		
	<!-- Toggle 'includeGold' -->
	<action id="plugins.coref.entityGridPresenter.toggleIncludeGoldMentionsAction"
		name="${id}.name" desc="${id}.description" icon="gold_node.png" type="toggle" />
		
	<!-- Toggle 'filterSingletons' -->
	<action id="plugins.coref.entityGridPresenter.toggleFilterSingletonsAction"
		name="${id}.name" desc="${id}.description" icon="filter_singletons.png" type="toggle" />
		
	<!-- Toggle 'adjustColumnWidth' -->
	<action id="plugins.coref.entityGridPresenter.toggleAdjustColumnWidthAction"
		name="${id}.name" desc="${id}.description" icon="html_tag_obj.gif" type="toggle" />
		
	<!-- Toggle Label Mode -->
	<action id="plugins.coref.entityGridPresenter.toggleLabelModeAction"
		name="${id}.name" desc="${id}.description" icon="label_mode.png" type="toggle" />
		
	<!-- Open Preferences -->
	<action id="plugins.coref.entityGridPresenter.openPreferencesAction"
		template="actions.default.openPreferencesAction" />
		
	<!-- ToolBar List for header area -->
	<action-list id="plugins.coref.entityGridPresenter.toolBarList">
		<item type="action" value="plugins.coref.entityGridPresenter.openPreferencesAction" />
		<separator />
		<item type="action" value="plugins.coref.entityGridPresenter.toggleAdjustColumnWidthAction" />
		<separator />
		<item type="action" value="plugins.coref.entityGridPresenter.toggleLabelModeAction" />
		<item type="custom" value="patternSelect" />
		<item type="custom" value="patternSelectInfo" />
		<separator />
		<item type="custom" value="annotationControl" />
		<separator />
		<item type="action" value="plugins.coref.entityGridPresenter.refreshAction" />
		<separator />
		<item type="action" value="plugins.coref.entityGridPresenter.toggleMarkFalseMentionsAction" />
		<item type="action" value="plugins.coref.entityGridPresenter.toggleIncludeGoldMentionsAction" />
		<item type="action" value="plugins.coref.entityGridPresenter.toggleFilterSingletonsAction" />
		<item type="custom" value="errorInfoLabel" />
		<item type="glue" />
	</action-list>
		
	<!-- ToolBar List for Popup-Menu -->
	<action-list id="plugins.coref.entityGridPresenter.popupMenuList">
		<item type="custom" value="showInMenu" />
	</action-list>
	
</actions>