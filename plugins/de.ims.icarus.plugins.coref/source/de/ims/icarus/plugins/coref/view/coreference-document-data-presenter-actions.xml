<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		COREFERENCE DOCUMENT VIEW
	-->
		
	<!-- Refresh View -->
	<action id="plugins.coref.coreferenceDocumentView.refreshViewAction"
		template="actions.default.refreshAction"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Clear View -->
	<action id="plugins.coref.coreferenceDocumentView.clearViewAction"
		template="actions.default.clearAction"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Toggle Property Outline -->
	<action id="plugins.coref.coreferenceDocumentView.toggleShowPropertyOutlineAction"
		name="${id}.name" desc="${id}.description" icon="properties.gif" type="toggle" />
		
	<!-- Toggle Context Outline -->
	<action id="plugins.coref.coreferenceDocumentView.toggleShowContextOutlineAction"
		name="${id}.name" desc="${id}.description" icon="icallout_obj.gif" type="toggle" />
		
	<!-- Open Preferences -->
	<action id="plugins.coref.coreferenceDocumentView.openPreferencesAction"
		template="actions.default.openPreferencesAction"
		name="${id}.name" desc="${id}.description" />
	
	<!-- Show Property Dialog -->
	<action id="plugins.coref.coreferenceDocumentView.showPropertyDialogAction"
		name="${id}.name" desc="${id}.description" icon="container_obj.gif" />
		
	<!-- ToolBar List for header area -->
	<action-list id="plugins.coref.coreferenceDocumentView.toolBarList">
		<item type="action" value="plugins.coref.coreferenceDocumentView.openPreferencesAction" />
		<separator />
		<item type="label" value="plugins.coref.coreferenceDocumentView.presenter" />
		<item type="custom" value="selectPresenter" />
		<separator />
		<item type="custom" value="headerLabel" />
		<separator />
		<item type="action" value="plugins.coref.coreferenceDocumentView.toggleShowPropertyOutlineAction" />
		<item type="action" value="plugins.coref.coreferenceDocumentView.toggleShowContextOutlineAction" />
		<separator />
		<item type="action" value="plugins.coref.coreferenceDocumentView.showPropertyDialogAction" />
		<separator />
		<item type="action" value="plugins.coref.coreferenceDocumentView.refreshViewAction" />
		<item type="action" value="plugins.coref.coreferenceDocumentView.clearViewAction" />
	</action-list>	
</actions>