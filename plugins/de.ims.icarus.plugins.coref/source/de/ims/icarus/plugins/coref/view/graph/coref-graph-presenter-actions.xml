<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		COREFERENCE GRAPH PRESENTER
	-->
		
	<!-- Toggle 'markFalseEdges' -->
	<action id="plugins.coref.coreferenceGraphPresenter.toggleMarkFalseEdgesAction"
		name="${id}.name" desc="${id}.description" icon="false_edge.png" type="toggle" />
		
	<!-- Toggle 'markFalseNodes' -->
	<action id="plugins.coref.coreferenceGraphPresenter.toggleMarkFalseNodesAction"
		name="${id}.name" desc="${id}.description" icon="false_node.png" type="toggle" />
		
	<!-- Toggle 'showGoldEdges' -->
	<action id="plugins.coref.coreferenceGraphPresenter.toggleShowGoldEdgesAction"
		name="${id}.name" desc="${id}.description" icon="gold_edge.png" type="toggle" />
		
	<!-- Toggle 'showGoldVertices' -->
	<action id="plugins.coref.coreferenceGraphPresenter.toggleShowGoldNodesAction"
		name="${id}.name" desc="${id}.description" icon="gold_node.png" type="toggle" />
		
	<!-- Toggle 'filterSingletons' -->
	<action id="plugins.coref.coreferenceGraphPresenter.toggleFilterSingletonsAction"
		name="${id}.name" desc="${id}.description" icon="filter_singletons.png" type="toggle" />
		
	<!-- Main ToolBar List for editable graph -->
	<action-list id="plugins.coref.coreferenceGraphPresenter.editableMainToolBarList">
		<item type="action" value="plugins.jgraph.graphPresenter.openPreferencesAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.clearGraphAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.exportCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.importCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.printGraphAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.deleteCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.copyCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.rebuildGraphAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.undoEditAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.redoEditAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.zoomInAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.resetZoomAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.zoomOutAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.toggleMarkIncomingAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.toggleMarkOutgoingAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.toggleAutoZoomAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.toggleCompressAction" />
		<!--
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.collapseCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.expandCellsAction" />
		-->
		<separator />
		<item type="action" value="plugins.coref.coreferenceGraphPresenter.toggleMarkFalseEdgesAction" />
		<item type="action" value="plugins.coref.coreferenceGraphPresenter.toggleMarkFalseNodesAction" />
		<item type="action" value="plugins.coref.coreferenceGraphPresenter.toggleShowGoldEdgesAction" />
		<item type="action" value="plugins.coref.coreferenceGraphPresenter.toggleShowGoldNodesAction" />
		<item type="action" value="plugins.coref.coreferenceGraphPresenter.toggleFilterSingletonsAction" />
		<item type="glue" />
	</action-list>
		
	<!-- Popup Menu List for editable graphs -->
	<action-list id="plugins.coref.coreferenceGraphPresenter.editablePopupMenuList">
		<item type="action" value="plugins.jgraph.graphPresenter.exportCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.deleteCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.copyCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.undoEditAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.redoEditAction" />
		<!--
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.collapseCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.expandCellsAction" />
		-->
		<separator />
		<item type="custom" value="showInMenu" />
	</action-list>
	
</actions>