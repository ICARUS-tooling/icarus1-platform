<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		SEARCH RESULT VIEW
	-->
		
	<!-- Refresh -->
	<action id="plugins.searchTools.searchResultView.refreshAction"
		template="actions.default.refreshAction"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Open Preferences -->
	<action id="plugins.searchTools.searchResultView.openPreferencesAction"
		template="actions.default.openPreferencesAction" />
		
	<!-- Clear View -->
	<action id="plugins.searchTools.searchResultView.clearViewAction"
		template="actions.default.clearAction"
		name="${id}.name" desc="${id}.description" />
		
	<!-- ToolBar List for header area -->
	<action-list id="plugins.searchTools.searchResultView.toolBarList">
		<item type="action" value="plugins.searchTools.searchResultView.openPreferencesAction" />
		<separator />
		<item type="custom" value="countLabel" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultView.refreshAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultView.clearViewAction" />
		<separator />
		<item type="custom" value="groupLabels" />
		<separator />
	</action-list>
	
</actions>