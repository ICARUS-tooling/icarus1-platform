<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		SEARCH RESULT PRESENTER
	-->
		
	<!-- Toggle Number-Display-Mode -->
	<action id="plugins.searchTools.searchResultPresenter.toggleNumberDisplayModeAction"
		name="${id}.name" desc="${id}.description" icon="percent.png" type="toggle" />
		
	<!-- Reorder Result -->
	<action id="plugins.searchTools.searchResultPresenter.reorderResultAction"
		name="${id}.name" desc="${id}.description" icon="actmark_act.gif" />
		
	<!-- Show Text Outline -->
	<action id="plugins.searchTools.searchResultPresenter.showTextOutlineAction"
		name="${id}.name" desc="${id}.description" icon="task_set.gif" />
		
	<!-- Sort Columns Actions -->
	<action id="plugins.searchTools.searchResultPresenter.sortColsAscAlphaAction"
		name="${id}.name" desc="${id}.description" icon="sort_cols_asc_alph.gif" command="sort_cols_asc_alph" />
	<action id="plugins.searchTools.searchResultPresenter.sortColsDescAlphaAction"
		name="${id}.name" desc="${id}.description" icon="sort_cols_desc_alph.gif" command="sort_cols_desc_alph" />
	<action id="plugins.searchTools.searchResultPresenter.sortColsAscNumAction"
		name="${id}.name" desc="${id}.description" icon="sort_cols_asc_num.gif" command="sort_cols_asc_num" />
	<action id="plugins.searchTools.searchResultPresenter.sortColsDescNumAction"
		name="${id}.name" desc="${id}.description" icon="sort_cols_desc_num.gif" command="sort_cols_desc_num" />
	<!-- Sort Rows Actions -->
	<action id="plugins.searchTools.searchResultPresenter.sortRowsAscAlphaAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_asc_alph.gif" command="sort_rows_asc_alph" />
	<action id="plugins.searchTools.searchResultPresenter.sortRowsDescAlphaAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_desc_alph.gif" command="sort_rows_desc_alph" />
	<action id="plugins.searchTools.searchResultPresenter.sortRowsAscNumAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_asc_num.gif" command="sort_rows_asc_num" />
	<action id="plugins.searchTools.searchResultPresenter.sortRowsDescNumAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_desc_num.gif" command="sort_rows_desc_num" />
	<!-- Sort Fixed Dimension Actions -->
	<action id="plugins.searchTools.searchResultPresenter.sortFixedDimensionAscAlphaAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_asc_alph.gif" command="sort_rows_asc_alph" />
	<action id="plugins.searchTools.searchResultPresenter.sortFixedDimensionDescAlphaAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_desc_alph.gif" command="sort_rows_desc_alph" />
	<action id="plugins.searchTools.searchResultPresenter.sortFixedDimensionAscNumAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_asc_num.gif" command="sort_rows_asc_num" />
	<action id="plugins.searchTools.searchResultPresenter.sortFixedDimensionDescNumAction"
		name="${id}.name" desc="${id}.description" icon="sort_rows_desc_num.gif" command="sort_rows_desc_num" />
	
	<action id="plugins.searchTools.searchResultPresenter.flipTableAction"
		name="${id}.name" desc="${id}.description" icon="flip.gif" />
	<action id="plugins.searchTools.searchResultPresenter.resetTableAction"
		name="${id}.name" desc="${id}.description" icon="sort_reset.png" />
	<action id="plugins.searchTools.searchResultPresenter.resetFixedTableAction"
		name="${id}.name" desc="${id}.description" icon="sort_reset.png" />
		
	<!-- ToolBar List for header area ( 1D result )-->
	<action-list id="plugins.searchTools.searchResultPresenter.toolBarList1D">
		<item type="custom" value="countLabels" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultPresenter.toggleNumberDisplayModeAction" />
		<item type="custom" value="sortButtons" />
		<item type="action" value="plugins.searchTools.searchResultPresenter.resetTableAction" />
	</action-list>
		
	<!-- ToolBar List for header area ( 2D result )-->
	<action-list id="plugins.searchTools.searchResultPresenter.toolBarList2D">
		<item type="custom" value="countLabels" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultPresenter.toggleNumberDisplayModeAction" />
		<item type="custom" value="sortButtons" />
		<item type="action" value="plugins.searchTools.searchResultPresenter.flipTableAction" />
		<item type="action" value="plugins.searchTools.searchResultPresenter.resetTableAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultPresenter.showTextOutlineAction" />
	</action-list>
		
	<!-- ToolBar List for header area ( 3D result )-->
	<action-list id="plugins.searchTools.searchResultPresenter.toolBarList3D">
		<item type="custom" value="countLabels" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultPresenter.toggleNumberDisplayModeAction" />
		<item type="custom" value="fixedDimensionSortButtons" />
		<item type="action" value="plugins.searchTools.searchResultPresenter.resetFixedTableAction" />
		<item type="custom" value="sortButtons" />
		<item type="action" value="plugins.searchTools.searchResultPresenter.flipTableAction" />
		<item type="action" value="plugins.searchTools.searchResultPresenter.resetTableAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultPresenter.showTextOutlineAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultPresenter.reorderResultAction" />
	</action-list>
	
</actions>