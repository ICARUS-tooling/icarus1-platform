<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		SEARCH MANAGER VIEW
	-->
		
	<!-- New Search -->
	<action id="plugins.searchTools.searchManagerView.newSearchAction"
		name="${id}.name" desc="${id}.description" icon="search_new.png" />
		
	<!-- Execute Search -->
	<action id="plugins.searchTools.searchManagerView.executeSearchAction"
		name="${id}.name" desc="${id}.description" icon="search_start.png" />
		
	<!-- Cancel Search -->
	<action id="plugins.searchTools.searchManagerView.cancelSearchAction"
		name="${id}.name" desc="${id}.description" icon="search_cancel.png" />
		
	<!-- Remove Search -->
	<action id="plugins.searchTools.searchManagerView.removeSearchAction"
		name="${id}.name" desc="${id}.description" icon="search_delete.png" />
		
	<!-- Clear History -->
	<action id="plugins.searchTools.searchManagerView.clearHistoryAction"
		name="${id}.name" desc="${id}.description" icon="clear_co.gif" />
		
	<!-- Open Preferences -->
	<action id="plugins.searchTools.searchManagerView.openPreferencesAction"
		name="${id}.name" desc="${id}.description" icon="settings.gif" />
		
	<!-- Edit Query -->
	<action id="plugins.searchTools.searchManagerView.editQueryAction"
		name="${id}.name" desc="${id}.description" icon="variable_tab.gif" />
		
	<!-- Select Factory -->
	<action id="plugins.searchTools.searchManagerView.selectFactoryAction"
		name="${id}.name" desc="${id}.description" icon="debugtt_obj.gif" />
		
	<!-- Select Target -->
	<action id="plugins.searchTools.searchManagerView.selectTargetAction"
		name="${id}.name" desc="${id}.description" icon="debugtt_obj.gif" />
		
	<!-- View Result -->
	<action id="plugins.searchTools.searchManagerView.viewResultAction"
		name="${id}.name" desc="${id}.description" icon="search_viewresult.png" />
		
	<!-- Edit Parameters -->
	<action id="plugins.searchTools.searchManagerView.editParametersAction"
		name="${id}.name" desc="${id}.description" icon="debugtt_obj.gif" />
		
	<!-- Edit Search -->
	<action id="plugins.searchTools.searchManagerView.viewSearchAction"
		name="${id}.name" desc="${id}.description" icon="search_view.png" />
		
	<!-- ToolBar List for header area -->
	<action-list id="plugins.searchTools.searchManagerView.toolBarList">
		<item type="action" value="plugins.searchTools.searchManagerView.openPreferencesAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchManagerView.newSearchAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchManagerView.executeSearchAction" />
	</action-list>
		
	<!-- ToolBar List for history area -->
	<action-list id="plugins.searchTools.searchManagerView.historyToolBarList">
		<item type="label" value="plugins.searchTools.searchManagerView.labels.history" />
		<item type="separator" value="20" />
		<item type="action" value="plugins.searchTools.searchManagerView.clearHistoryAction" />
		<item type="action" value="plugins.searchTools.searchManagerView.removeSearchAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchManagerView.viewSearchAction" />
		<item type="action" value="plugins.searchTools.searchManagerView.viewResultAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchManagerView.cancelSearchAction" />
	</action-list>
		
	<!-- Popup-Menu list for history list -->
	<action-list id="plugins.searchTools.searchManagerView.historyPopupMenuList">
		<item type="action" value="plugins.searchTools.searchManagerView.clearHistoryAction" />
		<item type="action" value="plugins.searchTools.searchManagerView.removeSearchAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchManagerView.viewSearchAction" />
		<item type="action" value="plugins.searchTools.searchManagerView.viewResultAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchManagerView.cancelSearchAction" />
	</action-list>
	
</actions>