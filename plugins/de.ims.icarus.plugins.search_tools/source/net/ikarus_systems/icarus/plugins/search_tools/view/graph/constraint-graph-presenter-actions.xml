<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		CONSTRAINT GRAPH PRESENTER
	-->
		
	<!-- Add Disjunction -->
	<action id="plugins.searchTools.constraintGraphPresenter.addDisjunctionAction"
		name="${id}.name" desc="${id}.description" icon="logical_or.png" />
		
	<!-- Toggle Root Operator -->
	<action id="plugins.searchTools.constraintGraphPresenter.toggleRootOperatorAction"
		name="${id}.name" desc="${id}.description" icon="logical_or.png" type="toggle" />
		
	<!-- Main ToolBar List for editable graph -->
	<action-list id="plugins.searchTools.constraintGraphPresenter.editableMainToolBarList">
		<item type="action" value="plugins.jgraph.graphPresenter.openPreferencesAction" />
		<separator />
		<item type="custom" value="selectLayoutLabel" />
		<item type="custom" value="selectLayout" />
		<item type="custom" value="selectStyleLabel" />
		<item type="custom" value="selectStyle" />
		<item type="custom" value="selectRendererLabel" />
		<item type="custom" value="selectRenderer" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.clearGraphAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.exportCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.importCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.printGraphAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.addNodeAction" />
		<item type="action" value="plugins.searchTools.constraintGraphPresenter.addDisjunctionAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.addEdgeAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.addOrderEdgeAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.deleteCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.cloneCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.copyCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.pasteCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.rebuildGraphAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.undoEditAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.redoEditAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.zoomInAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.resetZoomAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.zoomOutAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.editCellAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.toggleAutoZoomAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.toggleCompressAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.collapseCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.expandCellsAction" />
		<separator />
		<item type="action" value="plugins.searchTools.constraintGraphPresenter.toggleRootOperatorAction" />
		<item type="glue" />
	</action-list>
		
	<!-- Popup Menu List for editable graphs -->
	<action-list id="plugins.searchTools.constraintGraphPresenter.editablePopupMenuList">
		<item type="action" value="plugins.jgraph.graphPresenter.exportCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.addNodeAction" />
		<item type="action" value="plugins.searchTools.constraintGraphPresenter.addDisjunctionAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.addEdgeAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.addOrderEdgeAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.deleteCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.copyCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.pasteCellsAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.undoEditAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.redoEditAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.editCellAction" />
		<separator />
		<item type="action" value="plugins.jgraph.graphPresenter.collapseCellsAction" />
		<item type="action" value="plugins.jgraph.graphPresenter.expandCellsAction" />
	</action-list>
	
</actions>