<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		QUERY EDITOR VIEW
	-->
		
	<!-- Refresh Preview -->
	<action id="plugins.searchTools.queryEditorView.refreshPreviewAction"
		name="${id}.name" desc="${id}.description" icon="nav_go.gif" />
		
	<!-- Open Preferences -->
	<action id="plugins.searchTools.queryEditorView.openPreferencesAction"
		name="${id}.name" desc="${id}.description" icon="settings.gif" />
		
	<!-- Synchronize Graph -->
	<action id="plugins.searchTools.queryEditorView.synchronizeGraphAction"
		name="${id}.name" desc="${id}.description" icon="navi_up_stop.png" />
		
	<!-- Synchronize Query -->
	<action id="plugins.searchTools.queryEditorView.synchronizeQueryAction"
		name="${id}.name" desc="${id}.description" icon="navi_down_stop.png" />
		
	<!-- ToolBar List for header area -->
	<action-list id="plugins.searchTools.queryEditorView.toolBarList">
		<item type="action" value="plugins.searchTools.queryEditorView.undoAction" />
		<item type="action" value="plugins.searchTools.queryEditorView.redoAction" />
		<separator />
		<item type="action" value="plugins.searchTools.queryEditorView.cutAction" />
		<item type="action" value="plugins.searchTools.queryEditorView.copyAction" />
		<item type="action" value="plugins.searchTools.queryEditorView.pasteAction" />
		<separator />
		<item type="action" value="plugins.searchTools.queryEditorView.selectAllAction" />
		<item type="action" value="plugins.searchTools.queryEditorView.clearAction" />
		<item type="glue" />
		<item type="action" value="plugins.searchTools.queryEditorView.synchronizeGraphAction" />
		<item type="action" value="plugins.searchTools.queryEditorView.synchronizeQueryAction" />
	</action-list>
	
</actions>