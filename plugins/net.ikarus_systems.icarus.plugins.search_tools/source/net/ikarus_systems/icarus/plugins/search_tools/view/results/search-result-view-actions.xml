<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		SEARCH RESULT VIEW
	-->
		
	<!-- Refresh -->
	<action id="plugins.searchTools.searchResultView.refreshAction"
		name="${id}.name" desc="${id}.description" icon="nav_refresh.gif" />
		
	<!-- Open Preferences -->
	<action id="plugins.searchTools.searchResultView.openPreferencesAction"
		name="${id}.name" desc="${id}.description" icon="settings.gif" />
		
	<!-- View Search -->
	<action id="plugins.searchTools.searchResultView.viewSearchAction"
		name="${id}.name" desc="${id}.description" icon="occ_read.gif" />
		
	<!-- Save Result -->
	<action id="plugins.searchTools.searchResultView.saveResultAction"
		name="${id}.name" desc="${id}.description" icon="export_wiz.gif" />
		
	<!-- Open Result -->
	<action id="plugins.searchTools.searchResultView.openResultAction"
		name="${id}.name" desc="${id}.description" icon="import_wiz.gif" />
		
	<!-- Clear View -->
	<action id="plugins.searchTools.searchResultView.clearViewAction"
		name="${id}.name" desc="${id}.description" icon="delete_obj.gif" />
		
	<!-- ToolBar List for header area -->
	<action-list id="plugins.searchTools.searchResultView.toolBarList">
		<item type="action" value="plugins.searchTools.searchResultView.openPreferencesAction" />
		<separator />
		<item type="custom" value="countLabel" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultView.refreshAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultView.viewSearchAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultView.saveResultAction" />
		<item type="action" value="plugins.searchTools.searchResultView.openResultAction" />
		<separator />
		<item type="action" value="plugins.searchTools.searchResultView.clearViewAction" />
		<separator />
	</action-list>
	
</actions>